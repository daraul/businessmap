<!DOCTYPE html>
<html>
<head>
  <title>Homein</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
    <!-- API request -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['google_maps_api_key'] %>" %>>
    </script>
    <script type="text/javascript" src="http://google-maps-utility-library-v3.googlecode.com/svn/trunk/markerclusterer/src/markerclusterer.js"></script>
</head>
<body>

<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<%= javascript_tag do %>
    window.environment = "<%= Rails.env %>"
    <% if current_user %>
        currentuser = <%= current_user.id %>
    <% end %>
<% end %> 

<div id="map-canvas">
</div>

<div class="container" id="main_container">
    <%= yield %>
    
    <% if user_signed_in? %>
        <ul id="navigation_links">
        	<li>
        		<%= link_to page_path(id: "currentuser"), :id => "logged_in" do %>
        		  <%= raw Rails.application.assets.find_asset('current_user_icon.svg') %>
        		<% end %>
        	</li>
        	<li>
        		<%= link_to destroy_user_session_path, :method => :delete, :id => "logout" do %>
        		  <%= raw Rails.application.assets.find_asset('login_icon.svg') %>
        		<% end %>
        	</li>
        	<li>
        	    <%= link_to root_path do %>
        	      <%= raw Rails.application.assets.find_asset('home_icon.svg') %>
        	    <% end %>
        	</li>
        	<li>
        	    <%= link_to new_place_path do %>
        	      <%= raw Rails.application.assets.find_asset('new_icon.svg') %>
        	    <% end %>
        	</li>
    	</ul>
    <% else %>
        <ul id="navigation_links">
        	<li>
        		<%= link_to new_user_session_path, :id => "login" do %>
        		  <%= raw Rails.application.assets.find_asset('login_icon.svg') %>
        		<% end %>
        	</li>
        	<li>
        	    <%= link_to new_user_registration_path, :id => "register" do %> 
        	      <%= raw Rails.application.assets.find_asset('register_icon.svg') %>
        	    <% end %>
        	</li>
        	<li>
        	    <%= link_to root_path do %>
        	      <%= raw Rails.application.assets.find_asset('home_icon.svg') %>
        	    <% end %>
        	</li>
    	</ul>
    <% end %>
</div>

</body>
</html>
