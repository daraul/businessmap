<!DOCTYPE html>
<html>
<head>
  <title>Homein</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body <% if content_for?(:body_attributes) %>
	<%= yield(:body_attributes) %>
<% end %>>

<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<%= yield %>

<% if user_signed_in? %>
    <ul class="authorization_links">
    	<li>
    		Logged in as: <%= link_to current_user.email, page_path(id: "currentuser"), :id => "logged_in" %>
    	</li>
    	<li>
    		<%= link_to 'Logout', destroy_user_session_path, :method => :delete, :id => "logout" %>
    	</li>
	</ul>
<% else %>
    <ul class="authorization_links">
    	<li>
    		<%= link_to 'Login', new_user_session_path, :id => "login" %>
    	</li>
    	<li>
    	    <%= link_to 'Register', new_user_registration_path, :id => "register" %> 
    	</li>
	</ul>
<% end %>

</body>
</html>
