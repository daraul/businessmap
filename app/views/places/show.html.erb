<!-- API request -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['google_maps_api_key'] %>" %>>
</script>

<!-- Javascript to build the map -->
<script type="text/javascript">
  function initialize() {
    var myLatLng = new google.maps.LatLng(<%= @place.latitude %>, <%= @place.longitude %>);

    var mapOptions = {
      center: { lat: -34.397, lng: 150.644 }, 
      zoom: 17, 
      center: myLatLng
    };

    var map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);

    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map, 
      title: 'Hello World!',
      draggable: true,
      animation: google.maps.Animation.DROP 
    });

    google.maps.event.addListener(marker, 'dragend', setLatLng);

    function setLatLng() {
      var position = marker.getPosition()
      map.panTo(position);
      console.log(position);
    };
  };

  google.maps.event.addDomListener(window, 'load', initialize);
</script>

<!-- The actual map is here -->
<div id="map-canvas">
</div>

