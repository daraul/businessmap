<h1 class="address">
    <% if params[:action] == "show" %>
        <%= place.address %>
    <% else %>
        <%= link_to(place.address, place) %>
    <% end %>
</h1>

<p class="description"><%= place.description %></p>

<p>
    Price: <span class="price"><%= place.price.to_s(:currency) %></span>, For: <spa class="for"><%= place.for.capitalize %></span>
</p>

<p>
    Rooms: <span class="rooms"><%= place.rooms %></span>, Bathrooms: <span class="bathrooms"><%= place.bathrooms %></span>
</p>

<p><%= mail_to(place.user.email) %></p>