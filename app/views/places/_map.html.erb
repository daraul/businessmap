<!-- API request -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['google_maps_api_key'] %>" %>>
</script>

<!-- Javascript to build the map -->
<script type="text/javascript">
  var geocoder;
  var map;

  function initialize() {
    geocoder = new google.maps.Geocoder();

    var myLatLng = new google.maps.LatLng(<%= @place.latitude %>, <%= @place.longitude %>);

    var mapOptions = {
      zoom: 17, 
      center: myLatLng
    };

    map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map, 
      title: 'Hello World!',
      draggable: false,
      animation: google.maps.Animation.DROP 
    });

    google.maps.event.addListener(marker, 'dragend', setLatLng);

    function setLatLng() {
      var position = marker.getPosition()
      document.forms['edit_place_<%= params["id"] %>'].place_latitude.value = position.A
      document.forms['edit_place_<%= params["id"] %>'].place_longitude.value = position.F 
      map.panTo(position);

      reverseGeocode();
    };
  };

  function codeAddress() {
    var address = document.getElementById('address').value;

    geocoder.geocode({ 'address' : address }, function(results, status) {
      if (status == google.maps.GeocoderStatus.OK) {
        map.setCenter(results[0].geometry.location);
        var marker = new google.maps.Marker({
          map: map, 
          position: results[0].geometry.location,
          draggable: false
        });
      } else {
        alert('Geocode unsucessful because of: ' + status);
      }
    });
  }

  function reverseGeocode() {
    var latitude = document.forms['edit_place_<%= params["id"] %>'].place_latitude.value;
    var longitude = document.forms['edit_place_<%= params["id"] %>'].place_longitude.value;

    var latLng = new google.maps.LatLng(latitude, longitude);

    geocoder.geocode( { 'latLng' : latLng }, function(results, status) {
      console.log(results);

      var address = results[0].address_components[0].long_name + ", " + results[0].address_components[1].long_name + ", " + results[0].address_components[2].long_name + ", " + results[0].address_components[3].long_name + ", " + results[0].address_components[4].long_name;

      document.forms['edit_place_<%= params["id"] %>'].place_address.value = address;
    });
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>

<!-- The actual map is here -->
<div id="panel">
  <input id="address" type="textbox" value="Georgetown, Guyana">
  <input type="button" value="Geocode" onclick='codeAddress()'>
</div>
<div id="map-canvas">
</div>